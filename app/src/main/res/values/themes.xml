<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_sub_heading</item>
        <item name="colorPrimaryVariant">@color/color_sub_heading</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="styleHeading">
        <item name="color">@color/color_heading</item>
        <item name="android:textSize">@dimen/_40ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleSubHeading">
        <item name="color">@color/color_sub_heading</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="styleData">
        <item name="color">@color/color_sub_heading</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

</resources>